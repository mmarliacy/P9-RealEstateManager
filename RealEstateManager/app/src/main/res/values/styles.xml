<resources xmlns:tools="http://schemas.android.com/tools">
    //-------------------------------------------------------------------------------------------------->>
    //-------------------------------------------------------------------------------------------------->>
                                            THEMES ::  APP  // LAYOUTS
    //-------------------------------------------------------------------------------------------------->>
    //-------------------------------------------------------------------------------------------------->>
    <!-- PRIMARY THEME :: HOME SCREEN (RECYCLERVIEW) LAYOUT -->
    <style name="Theme.Primary.RealEstateManager" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondary_text</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    //-------------------------------------------------------------------------------------------------->>
    <!-- SECONDARY THEME :: ADD PROPERTY // PROPERTY FORM // LAYOUTS  -->
    <style name="Theme.Secondary.RealEstateManager" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    //-------------------------------------------------------------------------------------------------->>
    //-------------------------------------------------------------------------------------------------->>
                                    COMPONENTS :: LOGIN_ACTIVITY
    //-------------------------------------------------------------------------------------------------->>
    //-------------------------------------------------------------------------------------------------->>
    <!-- COMPONENT :: THEME -->
    <style name="LoginTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/white</item> <!-- Color of container and plain button -->
    <item name="colorOnPrimary">@color/black</item> <!-- Color inside button-->
    <item name="android:windowBackground">@drawable/best_323776_transparent</item>
    <!-- Secondary brand color. -->
    <item name="android:textColor">@color/white</item>
    <item name="android:textColorPrimary">@color/white</item>
    <item name="colorSecondary">@color/white</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/white</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor"
        tools:targetApi="l">@color/fui_transparent</item>
    </style>
    //-------------------------------------------------------------------------------------------------->>
    //-------------------------------------------------------------------------------------------------->>
                                    COMPONENTS :: ADD_PROPERTY_LAYOUT
    //-------------------------------------------------------------------------------------------------->>
    //-------------------------------------------------------------------------------------------------->>
    <!-- COMPONENT :: ACTIONBAR STYLE (ADD_PROPERTY_LAYOUT) -->
    <style name="CustomCollapsingActionBar_AddPropertyLayout" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="contentScrim">@color/accent</item>
    </style>
    //-------------------------------------------------------------------------------------------------->>
    <!-- COMPONENT :: COLLAPSE ACTIONBAR TITLE (ADD_PROPERTY_LAYOUT) -->
    <style name="CollapseTitleTextAppearanceActionBar_AddPropertyLayout" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    //-------------------------------------------------------------------------------------------------->>
    <!-- COMPONENT :: EXPANDED ACTIONBAR TITLE (ADD_PROPERTY_LAYOUT) -->
    <style name="ExpandedTitleTextAppearanceActionBar_AddPropertyLayout" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    //-------------------------------------------------------------------------------------------------->>
    <!-- COMPONENT :: TEXT INPUT LAYOUT  -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="startIconTint">@color/primary</item>
    </style>
    //-------------------------------------------------------------------------------------------------->>
    <!-- COMPONENT :: TEXT VIEW // TITLES  -->
    <style name="FormCustomPropertyTitle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    //-------------------------------------------------------------------------------------------------->>
    //-------------------------------------------------------------------------------------------------->>
                                    COMPONENTS :: REAL_ESTATE_SHEET_LAYOUT
    //-------------------------------------------------------------------------------------------------->>
    //-------------------------------------------------------------------------------------------------->>
    <!-- COMPONENT :: ACTIONBAR STYLE (REAL_ESTATE_SHEET_LAYOUT) -->
    <style name="CustomCollapsingActionBar_RealEstateSheetLayout" parent="Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="contentScrim">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    //-------------------------------------------------------------------------------------------------->>
    <!-- COMPONENT :: COLLAPSE ACTIONBAR TITLE (REAL_ESTATE_SHEET_LAYOUT) -->
    <style name="CollapseTitleTextAppearanceActionBar_RealEstateSheetLayout" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    //-------------------------------------------------------------------------------------------------->>
    <!-- COMPONENT :: EXPANDED ACTIONBAR TITLE (REAL_ESTATE_SHEET_LAYOUT) -->
    <style name="ExpandedTitleTextAppearanceActionBar_RealEstateSheetLayout" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
